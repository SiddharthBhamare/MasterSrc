@{
    Layout = "_LoginLayout";
}
@model PhotoBookWeb.Models.LoginModel
<div id="ActualBody">
    <div class="login">
        <form asp-controller="Login" asp-action="Index" method="post">
            <label for="chk" aria-hidden="true">Login</label>
            <input type="UserName" name="UserName" placeholder="User Name" required="">
            <input type="password" name="Password" placeholder="Password" required="">
            <button>Login</button>
            <div class="text-align-center">
                <span  asp-validation-for="UserName" class="text-danger"></span>
                <span asp-validation-for ="Password" class="text-danger"></span>
            </div>
        </form>
    </div>
    @section Errors{
        <div class="text-align-center" id="ValidationsDiv">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
            <label class="errormessage">@ViewBag.message</label>
        </div>
    }
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script type="text/javascript">
    if (sessionStorage["UserToken"]){
        sessionStorage.removeItem("UserToken");
    }
</script>

